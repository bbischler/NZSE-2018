<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:scrollIndicators="right"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical"
            android:scrollIndicators="right">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/card_background"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_date"
                            android:layout_width="48dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_bottom"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="@color/font"

                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_time"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_bottom"
                            android:gravity="right|center_vertical"
                            android:text="TextView"
                            android:textAlignment="textEnd"
                            android:textColor="@color/font"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textColor="@color/greyfont"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView_numberStudents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="TextView"
                        android:textSize="16sp" />

                </LinearLayout>
            </FrameLayout>

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/exerciseList_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/exerciseList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:divider="@color/background"
                    android:dividerHeight="20dp"
                    android:footerDividersEnabled="false"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.1"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_zusagen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="Zusagen"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_absagen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="Absagen"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_NeueUebung"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="Neue Ãœbung"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

